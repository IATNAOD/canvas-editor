{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "types",
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["es6", "dom", "es2016"],
		"target": "es5",
		"noImplicitAny": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
